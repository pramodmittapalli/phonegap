var file = require('file'),
    sys  = require('sys');

var source           = './source/',
    applicationFiles = [
      source+'index.html',
      source+'o2.js',
      source+'o2.css'
    ];

desc('Copy site into all application frameworks.');
task('default', [], function (params) {
  sys.puts('Copying site into application frameworks.');
  createWebsite();
});

var createWebsite = function() {
  var destination = './www/';
  for (var i=0,page; file=applicationFiles[i]; i++) {
    sys.puts(page);
  }
}
